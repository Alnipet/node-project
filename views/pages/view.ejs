<%- include('../partials/layout-start') %>

<% const fileCover = bookInfo.fileCover ? bookInfo.fileCover : 'https://placehold.co/500x700' %>
<% const favorite = bookInfo.favorite ? bookInfo.favorite : undefined %>

<div class="container m-5">
    <div class="bg-white">
        <div class="mx-auto grid max-w-2xl grid-cols-1 items-center gap-x-8 gap-y-16 px-4 py-4 sm:px-6 sm:py-6 lg:max-w-7xl lg:grid-cols-2 lg:px-8">
            <div>
                <img src="<%= fileCover %>"
                     alt="Walnut card tray with white powder coated steel divider and 3 punchout holes."
                     class="rounded-lg bg-gray-100">
            </div>

            <div class="flex-col h-full">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%= bookInfo.title %></h2>
                <p class="mt-4 text-gray-500"><%= bookInfo.description %></p>
                <dl class="mt-16 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 sm:gap-y-16 lg:gap-x-8">
                    <div class="border-t border-gray-200 pt-4">
                        <dt class="font-medium text-gray-900">Authors</dt>
                        <dd class="mt-2 text-sm text-gray-500"><%= bookInfo.authors %></dd>
                    </div>
                    <div class="border-t border-gray-200 pt-4">
                        <dt class="font-medium text-gray-900">Favorite</dt>
                        <dd class="mt-2 text-sm text-gray-500"><%= favorite %></dd>
                    </div>
                    <div class="border-t border-gray-200 pt-4">
                        <dt class="font-medium text-gray-900">Download book file</dt>
                        <dd class="mt-2 text-sm text-gray-500">
                            <a href="/api/books/<%= bookInfo.id %>/download"><%= bookInfo.fileName %></a>
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

</div>
<%- include('../partials/layout-end') %>